+ifeq ($(TW_NO_SCREEN_BLANK), true)
+  LOCAL_CFLAGS += -DTW_NO_SCREEN_BLANK
 endif
 ifeq ($(TW_FBIOPAN), true)
     LOCAL_CFLAGS += -DTW_FBIOPAN
