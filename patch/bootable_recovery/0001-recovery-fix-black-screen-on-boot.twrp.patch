+++ b/minuitwrp/Android.mk
@@ -134,8 +134,8 @@ ifneq ($(TARGET_RECOVERY_OVERSCAN_PERCENT),)
 else
   LOCAL_CFLAGS += -DOVERSCAN_PERCENT=0
 endif
-ifeq ($(TW_SCREEN_BLANK_ON_BOOT), true)
